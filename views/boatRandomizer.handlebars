<div style="height: 100vh">
  <div class="flex-center flex-column">

    <h1 class="animated bounce mb-4" id="randomBoat">Random Boat Name</h1>
    <div class="landingPageButtons">
      <button class="button randomizerButtons" id="boatRandomizerButton">New</button>
      <button class="button randomizerButtons" id="newBoatButton" data-toggle="modal" data-target="#boatModal">Add a Name</button>
    </div>
    <a href="/index" class="fas fa-undo-alt back"></a>

    <div class="modal fade text-center" id="boatModal" tabindex="-1" role="dialog" aria-labelledby="boatModal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="boatModalLabel">Add a new boat name</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <!-- INPUT FOR FORM -->
            <input type="text" id="newBoat" placeholder="New Name">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary create-form-boat">Submit</button>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
